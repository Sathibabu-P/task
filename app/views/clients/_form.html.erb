<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %> 
    <%= f.association :listings, label_method: :listingname, value_method: :id, include_blank: false %>   
     <%= f.input :contactinfo, as: :text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
