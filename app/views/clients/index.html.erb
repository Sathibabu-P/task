<div class="page-header">
  <%= link_to new_client_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Client
  <% end %>
  <h1>Listing clients</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Properties Count</th>
            <th></th>
       
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @clients) do |client| %>
            <td><%= client.name %></td>
            <td><%= client.listings.size %></td>
            <td><%= link_to client, class: "btn btn-primary" do %>
              <i class="glyphicon glyphicon-eye-open"></i>
           <% end %>
           <%= link_to  edit_client_path(client), class: "btn btn-success" do %>
              <i class="glyphicon glyphicon-edit"></i>
           <% end %>
             <%= link_to client, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="glyphicon glyphicon-trash"></i>
           <% end %>  
     
       </td>
      <% end %>
    </tbody>
  </table>
</div>
