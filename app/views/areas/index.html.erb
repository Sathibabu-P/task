<h1>Listing Areas</h1>
<div class="table-responsive">
<table class="table table-hover">  <thead>
    <tr>
      <th>Areaname</th>
      <th>ListingsCount</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= link_to "#{area.areaname}", area %></td>
        <td><%= area.listings.size if area.listings %></td>
        <td><%= area.position %></td>
        <td>
           <%= link_to edit_area_path(area), class: "btn btn-primary" do %>
              <i class="glyphicon glyphicon-edit"></i>
           <% end %>
           <%= link_to area, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="glyphicon glyphicon-trash"></i>
           <% end %>       
      </tr>
    <% end %>
  </tbody>
</table>
<div>

<br>
 
   <%= link_to new_area_path, class: "btn btn-primary" do %>
    <i class="glyphicon glyphicon-plus"></i>
<% end %>